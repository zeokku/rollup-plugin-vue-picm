{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/*.ts", "src/*.d.ts"],
  "exclude": [
    "src/experimentalGenerator.ts",
    "src/transformPug2.ts"
    //@todo transformPug.ts
  ]
}
