{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/*.ts",
    "src/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/experimentalGenerator.ts",
    //@todo transformPug.ts
  ]
}